{
  "name": "webgamemulti",
  "version": "1.0.0",
  "description": "GameTime Bar - A web-based gaming platform",
  "main": "src/main.jsx",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && echo 'Build completed. Ready for Cloudflare Pages deployment.'",
    "build:dev": "vite build --mode development",
    "build:prod": "vite build --mode production",
    "clean": "rm -rf dist node_modules/.vite",
    "test:build": "npm run build && npm run preview"
  },
  "keywords": [
    "games",
    "web-games",
    "html5-games",
    "react",
    "gaming-platform"
  ],
  "author": "GameTime Bar Team",
  "license": "MIT",
  "homepage": "https://gametime.bar",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gametime-bar.git"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "vite": "^4.3.2"
  }
}
